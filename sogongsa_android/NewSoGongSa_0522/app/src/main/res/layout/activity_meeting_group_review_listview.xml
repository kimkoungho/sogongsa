<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/box_corner"
    android:padding="10dp"
    android:orientation="vertical"
    tools:context=".Fragment.GroupReviewFragment">

    <!-- FaceBook Theme By PASUDO -->
    <!-- TODO: Update blank fragment layout -->

    <!--
        프로필 사진 // 사용자 이름 // 날짜 순으로 값을 가진다.
    -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="horizontal"
        android:padding="5dp">

        <!-- 경로를 못찾는 문제 -->
        <ImageView
            xmlns:circle="http://schemas.android.com/apk/res/com.example.koungho632.newsogongsaapplication"
            android:id="@+id/review_userProfile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.3">
        </ImageView>

        <TextView
            android:id="@+id/review_userName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="UserName"
            android:textSize="25dp">
        </TextView>

        <!-- yy.mm.dd 형식으로 간다. -->
        <TextView
            android:id="@+id/review_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="right"
            android:text="16.05.12">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:padding="5dp"
        android:orientation="vertical"
        android:background="@drawable/box_corner">

        <TextView
            android:id="@+id/review_userContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="user Content"
            android:textSize="18dp">
        </TextView>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp">
    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:orientation="vertical"
        android:padding="3dp"
        android:background="@drawable/box_corner">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <ImageView
                android:id="@+id/review_userPicture"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerInside">
            </ImageView>

            <ImageButton
                android:id="@+id/review_reple"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="bottom|right"
                android:scaleType="centerInside"
                android:background="#00000000">
            </ImageButton>
        </FrameLayout>

    </LinearLayout>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/btn_normal"
    tools:context=".Dialog.together_meet">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:layout_gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="번개 만들기"
            android:textSize="35dp"
            android:textColor="#000000">
        </TextView>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#000000"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">
        </View>

        <EditText
            android:id="@+id/fast_meeting_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:gravity="center"
            android:textSize="25dp"
            android:hint="번개 제목을 작성하세요."
            android:singleLine="true"
            android:maxLength="20"
            android:background="@drawable/box_corner">
        </EditText>

        <View
            android:layout_width="match_parent"
            android:layout_height="15dp">
        </View>

        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:padding="5dp"
                android:gravity="center"
                android:text="오늘"
                android:textSize="25dp"
                android:textColor="#000000">
            </TextView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4">

                <EditText
                    android:id="@+id/fast_meeting_month"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:hint="월"
                    android:inputType="number"
                    android:singleLine="true"
                    android:maxLength="2"
                    android:background="@drawable/box_corner">
                </EditText>

                <View
                    android:layout_width="5dp"
                    android:layout_height="match_parent">
                </View>

                <EditText
                    android:id="@+id/fast_meeting_day"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:hint="일"
                    android:inputType="number"
                    android:singleLine="true"
                    android:maxLength="2"
                    android:background="@drawable/box_corner">
                </EditText>

                <View
                    android:layout_width="5dp"
                    android:layout_height="match_parent">
                </View>

                <EditText
                    android:id="@+id/fast_meeting_hour"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:hint="24"
                    android:inputType="number"
                    android:singleLine="true"
                    android:maxLength="2"
                    android:background="@drawable/box_corner">
                </EditText>

                <View
                    android:layout_width="5dp"
                    android:layout_height="match_parent">
                </View>

                <EditText
                    android:id="@+id/fast_meeting_minute"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:hint="분"
                    android:inputType="number"
                    android:singleLine="true"
                    android:maxLength="2"
                    android:background="@drawable/box_corner">
                </EditText>
            </LinearLayout>
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="15dp">
        </View>

        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:padding="5dp"
                android:gravity="center"
                android:text="장소"
                android:textSize="25dp"
                android:textColor="#000000">
            </TextView>
            <EditText
                android:id="@+id/fast_meeting_where"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:padding="5dp"
                android:gravity="center"
                android:textSize="25dp"
                android:textColor="#000000"
                android:hint="강남역 1번 출구"
                android:singleLine="true"
                android:maxLength="20"
                android:background="@drawable/box_corner">
            </EditText>
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="15dp">
        </View>

        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:padding="5dp"
                android:gravity="center"
                android:text="금액"
                android:textSize="25dp"
                android:textColor="#000000">
            </TextView>
            <EditText
                android:id="@+id/fast_meeting_money"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:padding="5dp"
                android:gravity="center"
                android:textSize="25dp"
                android:textColor="#000000"
                android:hint="15000원"
                android:singleLine="true"
                android:inputType="number"
                android:maxLength="20"
                android:background="@drawable/box_corner">
            </EditText>
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="15dp">
        </View>

        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:padding="5dp"
                android:gravity="center"
                android:text="정원"
                android:textSize="25dp"
                android:textColor="#000000">
            </TextView>
            <EditText
                android:id="@+id/fast_meeting_personNum"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:padding="5dp"
                android:gravity="center"
                android:textSize="25dp"
                android:textColor="#000000"
                android:hint="10명"
                android:singleLine="true"
                android:maxLength="2"
                android:inputType="number"
                android:background="@drawable/box_corner">
            </EditText>
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="15dp">
        </View>


        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:padding="5dp"
                android:gravity="center"
                android:text="내용"
                android:textSize="25dp"
                android:textColor="#000000">
            </TextView>
            <EditText
                android:id="@+id/fast_meeting_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:padding="5dp"
                android:gravity="center"
                android:textSize="25dp"
                android:textColor="#000000"
                android:hint="20자 이내"
                android:singleLine="true"
                android:maxLength="20"
                android:maxLines="3"
                android:inputType="text"
                android:background="@drawable/box_corner">
            </EditText>
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="30dp">
        </View>

        <TableRow>
            <Button
                android:id="@+id/make_fast_okBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:padding="8dp"
                android:text="생성"
                android:textSize="25dp"
                android:background="@drawable/btn_click">
            </Button>
            <Button
                android:id="@+id/make_fast_cancelBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:padding="8dp"
                android:text="닫기"
                android:textSize="25dp"
                android:background="@drawable/btn_click">
            </Button>
        </TableRow>

    </TableLayout>

</LinearLayout>